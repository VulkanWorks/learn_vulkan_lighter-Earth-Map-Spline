package(default_visibility = ["//visibility:private"])

licenses(["notice"])

cc_library(
    name = "assimp",
    deps = [
        ":libassimp",
        ":libIrrXML",
        ":libzlib",
    ],
    visibility = ["//visibility:public"],
)

cc_import(
    name = "libassimp",
    static_library = "libassimp.a",
)

cc_import(
    name = "libIrrXML",
    static_library = "libIrrXML.a",
)

cc_import(
    name = "libzlib",
    static_library = "libzlib.a",
)

genrule(
    name = "unzip",
    srcs = ["osx.zip"],
    outs = [
        "libassimp.a",
        "libIrrXML.a",
        "libzlib.a",
    ],
    cmd = "unzip -j -d $(RULEDIR) $<",
    output_to_bindir = True,
)
licenses(["notice"])

cc_library(
    name = "assimp",
    visibility = ["//visibility:public"],
    deps = [":libassimp"],
)

cc_import(
    name = "libassimp",
    static_library = "libassimp.a",
    visibility = ["//visibility:private"],
)

genrule(
    name = "unzip",
    srcs = ["ubuntu.zip"],
    outs = ["libassimp.a"],
    cmd = "unzip -j -d $(RULEDIR) $<",
    output_to_bindir = True,
)

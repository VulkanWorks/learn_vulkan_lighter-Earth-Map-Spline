licenses(["notice"])

package(default_visibility = ["//visibility:private"])

cc_library(
    name = "freetype",
    hdrs = glob(["freetype/include/**"]),
    includes = ["freetype/include/third_party/freetype2"],
    strip_include_prefix = "freetype/include",
    deps = [":libfreetype"],
    visibility = ["//visibility:public"],
)

cc_import(
    name = "libfreetype",
    static_library = "freetype/lib/freetype.lib",
)

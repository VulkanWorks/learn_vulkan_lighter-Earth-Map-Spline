licenses(["notice"])

package(default_visibility = ["//visibility:private"])

cc_library(
    name = "glfw",
    hdrs = glob(["glfw/include/**"]),
    strip_include_prefix = "glfw/include",
    deps = [":libglfw"],
    linkopts = ["gdi32.lib shell32.lib user32.lib"],
    visibility = ["//visibility:public"],
)

cc_import(
    name = "libglfw",
    static_library = "glfw/lib/glfw3.lib",
)

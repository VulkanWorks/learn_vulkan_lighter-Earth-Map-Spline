package(default_visibility = ["//visibility:private"])

licenses(["notice"])

cc_import(
    name = "libvulkan",
    static_library = "vulkan-sdk/Lib/vulkan-1.lib",
)

cc_library(
    name = "vulkan",
    hdrs = glob(["vulkan-sdk/include/vulkan/*.h"]),
    deps = [":libvulkan"],
    include_prefix = "third_party/vulkan",
    strip_include_prefix = "vulkan-sdk/include/vulkan",
    visibility = ["//visibility:public"],
)
